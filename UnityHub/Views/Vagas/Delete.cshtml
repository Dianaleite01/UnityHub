@model UnityHub.Models.Vagas

@{
    ViewData["Title"] = "Eliminar Vaga";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="alert alert-danger text-center" role="alert">
        <h4 class="alert-heading">Tem certeza que deseja eliminar esta vaga?</h4>
        <p>Esta ação não pode ser desfeita.</p>
    </div>

    <div class="card mb-4 shadow-sm">
        @if (!string.IsNullOrEmpty(Model.Fotografia))
        {
            <img src="~/images/@Model.Fotografia" class="card-img-top" alt="@Model.Nome" style="height: 400px; object-fit: cover;">
        }
        <div class="card-body">
            <h2 class="card-title">@Model.Nome</h2>
            <p class="card-text"><strong>Período de Voluntariado:</strong> @Model.PeriodoVoluntariado</p>
            <p class="card-text"><strong>Local:</strong> @Model.Local</p>
            <p class="card-text"><strong>Descrição:</strong> @Model.Descricao</p>
            <p class="card-text">
                <strong>Categorias:</strong>
                @foreach (var categoria in Model.VagasCategorias)
                {
                    <span class="badge bg-secondary">@categoria.Categoria.Nome</span>
                }
            </p>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash-alt"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </form>
    </div>
</div>
