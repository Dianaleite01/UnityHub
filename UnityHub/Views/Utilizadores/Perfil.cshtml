@model UnityHub.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Perfil";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>Informações do Utilizador</h3>
    <p><strong>Nome:</strong> @Model.Nome</p>
    <p><strong>Telemóvel:</strong> @Model.Telemovel</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Data de Nascimento:</strong> @Model.DataNascimento.ToString("dd/MM/yyyy")</p>
    <p><strong>Cidade:</strong> @Model.Cidade</p>
    <p><strong>Pais:</strong> @Model.Pais</p>
    <a asp-action="EditProfile" class="btn btn-primary">Editar Perfil</a>
</div>

<div>
    <h3>Minhas Candidaturas</h3>
    @if (Model.Candidaturas != null && Model.Candidaturas.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Vaga</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var candidatura in Model.Candidaturas)
                {
                    <tr>
                        <td>@candidatura.Vaga.Nome</td>
                        <td>@candidatura.Estado</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Você ainda não se candidatou a nenhuma vaga.</p>
    }
</div>
