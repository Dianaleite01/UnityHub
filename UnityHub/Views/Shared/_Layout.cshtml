<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - UnityHub</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Seu CSS personalizado -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

</head>
<body>
    <div class="NavbarItems">
        <a asp-area="" asp-page="/" class="navbar-logo">UnityHub</a>
        <div class="menu-icons" id="menuIcon">
            <i class="fas fa-bars"></i>
        </div>
        <ul class="nav-menu" id="navMenu">
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-links">
                    <i class="fas fa-home"></i> Home
                </a>
            </li>
            @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
            {
                <li>
                    <a asp-area="" asp-controller="Vagas" asp-action="Index" class="nav-links">
                        Vagas
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Candidaturas" asp-action="All" class="nav-links">
                        Candidaturas
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Categorias" asp-action="Index" class="nav-links">
                        Categorias
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Utilizadores" asp-action="Index" class="nav-links">
                        Utilizadores
                    </a>
                </li>
            }
            else
            {
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="About" class="nav-links">
                        <i class="fas fa-info-circle"></i> Sobre
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-links">
                        <i class="fas fa-envelope"></i> Contacto
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        <a asp-area="" asp-controller="Utilizadores" asp-action="Perfil" class="nav-links">
                            Perfil
                        </a>
                    </li>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top navbar-custom">
        <div class="container-fluid">
            <a asp-area="" asp-page="/" class="navbar-brand">UnityHub</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Alternar navegação">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">
                            <i class="fas fa-home"></i> Home

                        </a>
                    </li>
                  
                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Vagas" asp-action="Index" class="nav-link">
                                <i class="fas fa-briefcase"></i> Vagas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Candidaturas" asp-action="All" class="nav-link">
                                <i class="fas fa-file-alt"></i> Candidaturas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Categorias" asp-action="Index" class="nav-link">
                                <i class="fas fa-list"></i> Categorias
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Home" asp-action="About" class="nav-link">
                                <i class="fas fa-info-circle"></i> Sobre
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-link">
                                <i class="fas fa-envelope"></i> Contacto
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Utilizadores" asp-action="Perfil" class="nav-link">
                                    <i class="fas fa-user"></i> Perfil
                                </a>
                            </li>
                        }
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <form asp-controller="Utilizadores" asp-action="Logout" method="post" id="logoutForm" style="display: none;"></form>
                            <a href="javascript:document.getElementById('logoutForm').submit();" class="nav-link">
                                <i class="fas fa-sign-out-alt"></i> Sair
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Utilizadores" asp-action="Register" class="nav-link">
                                <i class="fas fa-user-plus"></i> Registar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Utilizadores" asp-action="Login" class="nav-link">
                                <i class="fas fa-sign-in-alt"></i> Entrar
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
                }
            }
            @if (User.Identity.IsAuthenticated)
            {
                <li>
                    <form asp-controller="Utilizadores" asp-action="Logout" method="post" id="logoutForm" style="display: none;"></form>
                    <a href="javascript:document.getElementById('logoutForm').submit();" class="nav-links">
                        Sair
                    </a>
                </li>
            }
            else
            {
                <li>
                    <a asp-area="Identity" asp-page="/Account/Register" class="nav-links">
                        Registar
                    </a>
                </li>
                <li>
                    <a asp-area="Identity" asp-page="/Account/Login" class="nav-links">
                        Login
                    </a>
                </li>
            }
        </ul>
    </div>
    <!-- Conteúdo Principal -->
    <div class="container mt-5 pt-5">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <!-- Bootstrap JS Bundle (inclui Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
